<div id="quote-rotator" style="text-align: center; font-style: italic; max-width: 600px; margin: 2rem auto;">
  <% if @quotes&.any? %>
    <% @quotes.each_with_index do |quote, index| %>
      <div class="quote" style="display: <%= index == 0 ? 'block' : 'none' %>; opacity: <%= index == 0 ? 1 : 0 %>; transition: opacity 1s;">
        <p>"<%= quote[:content] %>"</p>
        <p style="text-align: right;">— <%= quote[:author] %></p>
      </div>
    <% end %>
  <% else %>
    <p>"✨ The stars are silent for now..."</p>
  <% end %>
  <div>
  <img src="<%= asset_path 'romehead.gif' %>" alt="Rome Head GIF" style="margin-top: 15px;">
  <div/>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const quotes = document.querySelectorAll(".quote");
    let current = 0;

    const showNextQuote = () => {
      quotes[current].style.opacity = 0;
      quotes[current].style.display = "none";
      current = (current + 1) % quotes.length;
      quotes[current].style.display = "block";
      setTimeout(() => {
        quotes[current].style.opacity = 1;
      }, 50);
    };

    setInterval(showNextQuote, 8000); // Rotate every 8s
  });
</script>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const audio = document.getElementById("background-audio");
    const storedTime = localStorage.getItem("audioTime");

    // Set the audio to the stored time if it exists
    if (storedTime) {
      audio.currentTime = parseFloat(storedTime);
    }

    // Play the audio continuously
    audio.play();

    // Update localStorage with the current audio time every time it updates
    audio.addEventListener("timeupdate", () => {
      localStorage.setItem("audioTime", audio.currentTime);
    });
  });
</script>

