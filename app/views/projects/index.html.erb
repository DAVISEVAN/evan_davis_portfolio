<!-- Left-aligned title -->
<h2 style="text-align: left; color: #ff00ff;">Projects</h2>

<!-- Centered project container -->
<div style="text-align: center;">
  <div class="project-container">
    <% @projects.each do |project| %>
      <div class="project-card">
        <h3><%= project.title %></h3>
        <img src="<%= asset_path project.image_url %>" alt="<%= project.title %>" style="width: 100%; border-radius: 10px;">
        <%= link_to "View Details", project_path(project), class: "project-link" %>
      </div>
    <% end %>
  </div>

  <!-- Romehead GIF below the project cards, also centered -->
  <img src="<%= asset_path 'romehead.gif' %>" alt="Rome Head GIF" style="margin-top: 15px;">
</div>
